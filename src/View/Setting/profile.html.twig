{% extends 'settingProfile.html.twig' %}

{% block title %} Wildify | Profile {% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/setting/underline-profile.css">
{% endblock %}

{% block topNavbar %}
    {% include 'Setting/Navbar/settingTopNavbar.html.twig' %}
{% endblock %}

{% block sideNavbar %}
    {% include 'Setting/Navbar/settingSideNavbar.html.twig' %}
{% endblock %}

{% block content %}
    <section class="profile-section">

        <h1 class="setting-title">> My profile <</h1>

        <h2 class="success-update">{{ success }}</h2>

        <div class="container-info-profile">
            <ul class="info-list">
                <li><p class="info">Firstname :</p>
                    <p class="data">{{ user.firstname }}</p></li>
                <li><p class="info">Lastname :</p>
                    <p class="data">{{ user.lastname }}</p></li>
                <li><p class="info">Username : </p>
                    <p class="data">{{ user.username }}</p></li>
                <li><p class="info">Birthday : </p>
                    <p class="data">{{ user.birthday }}</p></li>
                <li><p class="info">Country : </p>
                    <p class="data">{{ user.country }}</p></li>
                <li><p class="info">Email :</p>
                    <p class="data">{{ user.email }}</p></li>
                <li><p class="info">Password :</p>
                    <p class="data">&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;</p></li>
            </ul>
        </div>

        <div class="profile-button-option">
            <a class="update-profile" href="/setting/profile/edit?id={{ user.ID_user }}">Update profile</a>
            <a class="delete-account" href="/setting/profile/delete?id={{ user.ID_user }}">Delete account</a>
        </div>

    </section>
{% endblock %}
